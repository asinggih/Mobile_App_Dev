<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <CheckBox
        android:id="@+id/choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="#949998"
        android:layout_marginLeft="10dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />

    <LinearLayout
        android:id="@+id/exam_detail_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:focusable="false"
        android:focusableInTouchMode="false"
        >

        <TextView
            android:id="@+id/exam_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Software Constrcution"
            android:textSize="25dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/exam_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/01/2019"
            android:textSize="17dp"
            />

        <TextView
            android:id="@+id/exam_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00"
            android:textSize="17dp"
            />

        <TextView
            android:id="@+id/exam_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paramatta Campus - 4.03"
            android:textSize="17dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:descendantFocusability="blocksDescendants"
        >

        <ImageButton
            android:id="@+id/exam_delete"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_vertical"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:background="@drawable/cancel" />

    </LinearLayout>

</LinearLayout>